// The ShadedIdentity Shader
// Vertex Shader
// Richard S. Wright Jr.
// OpenGL SuperBible
#version 140

layout (location = 0) in vec4 vVertex;
in vec4 vColor;

out vec4 gl_Position;
centroid out vec4 vVaryingColor;

void main(void) 
    { 
    vVaryingColor = vColor;
    gl_Position = vVertex;
    }